<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lilystu.springboot.mybatisplus.dao.MonsterMapper">
    <!-- 实现getMonsterById 方法-->
    <select id="getMonsterById" parameterType="Integer"
            resultType="com.lilystu.springboot.mybatisplus.bean.Monster">
        SELECT * FROM monster WHERE id = #{id}
    </select>
    <insert id="insertSelective">
        insert into monster
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="age != null">age,</if>
            <if test="name != null">name,</if>
            <if test="email != null">email,</if>
            <if test="birthday != null">birthday,</if>
            <if test="salary != null">salary,</if>
            <if test="gender != null">gender,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=NUMERIC},</if>
            <if test="age != null">#{age,jdbcType=NUMERIC},</if>
            <if test="name != null">#{name,jdbcType=VARCHAR},</if>
            <if test="email != null">#{email,jdbcType=VARCHAR},</if>
            <if test="birthday != null">#{birthday,jdbcType=TIMESTAMP},</if>
            <if test="salary != null">#{salary},</if>
            <if test="gender != null">#{gender,jdbcType=NUMERIC},</if>
        </trim>
    </insert>
    <delete id="delByEmail">
        delete from monster
        where
        email = #{email,jdbcType=VARCHAR}
    </delete>
</mapper>